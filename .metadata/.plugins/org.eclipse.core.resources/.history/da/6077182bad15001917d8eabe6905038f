package pack1;

public class Pizza {
	double diameter;
	double area;
	final static double AREA_FOR_EACH_SLICES = 14.125;
	
	public void setDiameter(double diameter) {
		this.diameter = diameter;
		calculateArea();
	}
	
	public void calculateArea(){
		this.area = Math.PI*(Math.pow(diameter/2, 2));
	}
}
