package pack1;

public class Pizza {
	double diameter;
	double area;
	final static double AREA_FOR_EACH_SLICES = 14.125;
	
	public void setDiameter(double diameter) {
		this.diameter = diameter;
		calculateArea();
	}
	
	public void calculateArea(){
		this.area = Math.PI*(Math.pow(this.diameter/2, 2));
	}
	
	public void numberOfSlices() {
		return this.area/this.AREA_FOR_EACH_SLICES;
	}
}
