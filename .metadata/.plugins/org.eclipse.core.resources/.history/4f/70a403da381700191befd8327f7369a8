package pack1;

public class Grade {
	
	public static final int[] GRADE = {4,3,2,1,0};
	int gradePoints = 0;
	
	public int getGradePoints(String grade) {
		
		
		char c = grade.charAt(0);

		switch (c) {
			case 'A':
				this.gradePoints = this.GRADE[0];
				break;
			case 'B':
				this.gradePoints = this.GRADE[1];
				break;
			case 'C':
				this.gradePoints = this.GRADE[2];
				break;
			case 'D':
				this.gradePoints = this.GRADE[3];
				break;
			case 'F':
				this.gradePoints = this.GRADE[4];
				break;
			default:
				System.out.println("Invalid Grade");
				return 1;
		}
		return this.gradePoints;
	}

}
