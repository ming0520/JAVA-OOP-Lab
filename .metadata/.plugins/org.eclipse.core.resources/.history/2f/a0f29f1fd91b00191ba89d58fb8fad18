package package1;

public class Quadratic {
	double a, b, c;
	double root1,root2;
	double determinant;
	
	public void calcRoots (double a, double b, double c) {
		this.a = a;
		this.b = b;
		this.c = c;
		determineRoots();
	}
	
	private int checkDeterminant () {
		// b^2-4ac
		this.determinant = Math.pow(this.a, 2) - 4 * a * c;
		
		// run only real and different roots
		if(determinant > 0) {
			return 0;
		}
		//run only when real and equal roots
		else if(determinant == 0) {
			return 1;
		}
		//if roots are not real
		else {
			return 2;
		}
	}
	
	private void determineRoots() {
		
		switch(checkDeterminant()) {
			case 0:
				this.root1 = ( - b + Math.sqrt(this.determinant) / 2 * this.a);
				this.root2 = ( - b - Math.sqrt(this.determinant) / 2 * this.a);
				System.out.printf("root1: %.2f root2: %.2f", this.root1,this.root2);
				break;
			case 1:
				this.root1 = this.root2 = -b / (2 * a);
				System.out.printf("root1 = root2 : %.2f",this.root1);
				break;
			case 2:
				double realPart = - b / (2 * a);
				double imaginaryPart = Math.sqrt(-this.determinant) / (2* this.a);
				System.out.printf("root1:");
		}
	}
}
