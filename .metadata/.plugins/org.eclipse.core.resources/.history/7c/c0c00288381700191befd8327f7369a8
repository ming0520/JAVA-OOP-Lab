package pack1;

public class Grade {
	
	public static final int[] GRADE = {4,3,2,1,0};
	
	public void getGradePoints(String grade) {
		int gradePoints = 0;
		
		char c = grade.charAt(0);

		switch (c) {
			case 'A':
				gradePoints = GRADE[0];
				break;
			case 'B':
				gradePoints = GRADE[1];
				break;
			case 'C':
				gradePoints = GRADE[2];
				break;
			case 'D':
				gradePoints = GRADE[3];
				break;
			case 'F':
				gradePoints = GRADE[4];
				break;
			default:
				System.out.println("Invalid Grade");
				return false;
		}
	}

}
