package package1;

public class Quadratic {
	int a, b, c;
	double root1,root2;
	double determinant;
	
	public void calcRoots (int a, int b, int c) {
		this.a = a;
		this.b = b;
		this.c = c;
		determineRoots();
	}
	
	private int checkDeterminant () {
		// b^2-4ac
		this.determinant = (Math.pow(this.b, 2) - 4 * a * c);
		
		// run only real and different roots
		if(determinant > 0) {
			return 0;
		}
		//run only when real and equal roots
		else if(determinant == 0) {
			return 1;
		}
		//if roots are not real
		else {
			return 2;
		}
	}
	
	private void determineRoots() {
		
		switch(checkDeterminant()) {
			case 0:
				System.out.println("Roots are real and unequal");
				
				this.root1 = ( - b + Math.sqrt(this.determinant) / (2 * this.a));
				this.root2 = ( - b - Math.sqrt(this.determinant) / (2 * this.a));
				
				System.out.printf("root1: %.2f root2: %.2f", this.root1,this.root2);
				break;
			case 1:
				System.out.println("Roots are real and equal");
				
				this.root1 = this.root2 = -b / (2 * a);
				
				System.out.printf("root1 = root2 : %.2f",this.root1);
				break;
			case 2:
				System.out.println("Roots are imaginary");
				
				double realPart = - b / (2 * a);
				double imaginaryPart = Math.sqrt(-this.determinant) / (2* this.a);
				
				System.out.printf("root1: %.2f+%.2fi and root2: %.2f-%.2fi",realPart,imaginaryPart,realPart,imaginaryPart);
				break;
			default:
				System.out.println("Function determineRoots Error");
				break;
		}
	}
}
