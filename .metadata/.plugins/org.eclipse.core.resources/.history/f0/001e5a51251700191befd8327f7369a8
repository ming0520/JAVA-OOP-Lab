package package1;

import java.util.*;

public class CalculateBill {
	
	public static final double COUNTRY_TAX_A = 1.07;
	public static final double COUNTRY_TAX_B = 1.05;
	

	public static void main(String[] args) {
		double purchase,taxRate;
		char country;
		
		Scanner input = new Scanner(System.in);
		
		System.out.print("Amount of purchase? ");
		purchase = input.nextDouble();
		
		System.out.print("Country? ");
		country = (char)input.next().charAt(0);
		country = Character.toUpperCase(country);
		
		switch(country) {
			case 'A':
				taxRate = COUNTRY_TAX_A;
				break;
			case 'B':
				taxRate = COUNTRY_TAX_B;
				break;
			default:
				System.out.println("Invalid input");
				break;
		}
		
		System.out.println("Total Bill: "+ (purchase*taxRate));
	}

}
