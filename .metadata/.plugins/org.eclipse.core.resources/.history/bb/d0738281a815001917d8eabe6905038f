package pack1;

public class Concert {
	
	private int		   NUMBER_OF_CATEGORIES;
	private int		[] PRICE_OF_TICKETS      = new 	int		[NUMBER_OF_CATEGORIES];
	private String	[] NAME_OF_CATEGORIES    = new 	String	[NUMBER_OF_CATEGORIES];
	private int		[] tickets_sold 		 = new 	int		[NUMBER_OF_CATEGORIES];
	private int		   total_revenue;
	
	public void setNumberOfCategories(int noc) {
		this.NUMBER_OF_CATEGORIES = noc;
	}
	
	public void setNameOfCategories (String[] name) {
		this.NAME_OF_CATEGORIES = name;
	}
	
	public void setPriceOfTickets (int[] pot) {
		this.PRICE_OF_TICKETS = pot;
	}
	
	public void setTicketsSold () {
		/*
		 * Display the menu in table form
		 * Ask user the number of tickets sold
		 */
		System.out.println("============Calculate Total Revenue==========");
		System.out.println("Enter number of tickets sold");
		System.out.println("Categories     Price     Tickets Sold");
		System.out.println("----------     -----     ------------");
		
		/*
		 * A loop that ask the tickets sold for each categories
		 * and store the input at array tickets_sold
		 */
		for(int i = 0; i < NUMBER_OF_CATEGORIES; i++) {			
			System.out.print(NAME_OF_CATEGORIES[i]);
			System.out.print("$" + PRICE_OF_TICKETS[i]);
			System.out.print("\t     ");
			
			tickets_sold[i] = input.nextInt();
			//System.out.print("$" + PRICE_OF_TICKETS[i] * tickets_sold[i]);
		}
	}

}
